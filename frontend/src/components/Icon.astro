---
interface Props {
    name: IconName,
    className?: string,
    size: IconSize
}

const { className = "", name = "arrow-left", size = 'md' } = Astro.props

type IconSize = 'sm' | 'md' | 'lg' | 'xl'

const sizes: Record<IconSize, string> = {
    sm: "w-3 h-3 stroke-1",
    md: "w-4 h-4 stroke-2",
    lg: "w-6 h-6 stroke-2",
    xl: "w-8 h-8 stroke-3"
}

type IconName = 
'arrow-left'
| 'check'
| 'chevron-down'
| 'chevron-right'
| 'chevron-up'
| 'exit'
| 'eye'
| 'filter'
| 'log-out'
| 'message'
| 'moon'
| 'more-vertical'
| 'pencil'
| 'plus'
| 'reload'
| 'search'
| 'user'

---

<svg role="img" class=`${sizes[size]} ${className}`>
    <use xlink:href=`/icons.svg#${name}` ></use>
</svg>