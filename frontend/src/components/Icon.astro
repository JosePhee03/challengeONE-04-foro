---
interface Props {
    name: IconName;
    className?: string;
    size: IconSize;
    currentColor?: boolean;
}

const { className = "", name, size = "md", currentColor = false } = Astro.props;

type IconSize = "sm" | "md" | "lg" | "xl";

const sizes: Record<IconSize, string> = {
    sm: "w-3 h-3 stroke-1",
    md: "w-4 h-4 stroke-2",
    lg: "w-6 h-6 stroke-2",
    xl: "w-8 h-8 stroke-3",
};

type IconName =
    | "arrow-left"
    | "check"
    | "chevron-down"
    | "chevron-right"
    | "chevron-up"
    | "exit"
    | "eye"
    | "filter"
    | "log-out"
    | "message"
    | "moon"
    | "more-vertical"
    | "pencil"
    | "plus"
    | "reload"
    | "search"
    | "user"
    | "logo";
---

<svg
    role="img"
    class=`${currentColor == true ? 'stroke-current-color' : 'stroke-icon-light dark:stroke-icon-dark'} fill-none ${sizes[size]} ${className}`
    stroke-linecap="round"
    stroke-linejoin="round"
>
    <use xlink:href=`/icons.svg#${name}`></use>
</svg>
